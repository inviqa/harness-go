  pact-cli:
    image: {{ @('services.pact-cli.repository') ~ @('services.pact-cli.tag') }}
    labels:
      - traefik.enable=false
    environment: {{ to_nice_yaml(deep_merge([
        @('services.pact-cli.environment'),
        @('services.pact-cli.environment_secrets')
      ]), 2, 6) | raw }}
    profiles:
      - runnable
    networks:
      - private
    volumes:
      - pacts:/app/pacts
